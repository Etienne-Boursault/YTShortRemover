{
  "manifest_version": 2,
  "name": "YouTube Short Video Remover",
  "version": "1.0",
  "description": "Automatically removes Short videos from YouTube search results",
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["tabs", "activeTab", "http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
